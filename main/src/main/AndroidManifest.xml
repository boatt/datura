            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ui.activity.CapitalDetailedFormActivity" />
        <activity android:name=".ui.activity.CoinDetailedActivity" />
        <activity android:name=".ui.activity.GroundActivity" />
        <activity android:name=".ui.activity.MedalActivity" />
        <activity android:name=".ui.activity.setting.SettingActivity" />
        <activity android:name=".ui.activity.setting.FeedbackActivity" />
        <activity android:name=".ui.activity.setting.AboutActivity" />
    </application>
</manifest>
