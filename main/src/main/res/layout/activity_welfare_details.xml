<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:transitionName="img_view_1" />

        <ImageView
            android:id="@+id/img_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_bottom"
            android:layout_marginLeft="16dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:transitionName="title_1" />

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:text="......"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:transitionName="tv_bottom" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_divider_black"
                android:padding="10dp"
                android:text="简介"
                android:textColor="@color/colorTextContent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="\t\t\t\t读书改变命运
在我们生活的世界，书籍随处可见、随手可读，但是，在贫困地区还有这样的一些孩子，他们热爱学习，渴望知识，可他们只有人手一本的课本，屈指可数的课外读物。内蒙古一个偏远贫困地区的小学校长，坚守岗位31年，把一批又一批的孩子培养成才，为孩子们的教育付出了一生的心血，当益童成长中心工作人员带着图书走进学校时，这个兢兢业业的校长召集全村人来到学校开会，感谢中心为孩子们送来优质图书，同时告诉孩子的家人，要陪着孩子一起读书，读书使人进步，读书改变命运。
关于益童书屋
中华儿慈会益童成长中心于2015年4月启动了益童书屋计划，为贫困山区的留守儿童们筹集课外读物，在学校建立阅览室。截止到2017年11月，已在全国内蒙古、青海、山东、山西、河北、新疆、安徽、河南、甘肃等地建立40余所书屋。" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_divider_black"
                android:padding="10dp"
                android:text="用途"
                android:textColor="@color/colorTextContent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="\t\t\t\t筹集的资金除了执行费用将全部用于购买图书，在全国贫困地区中小学建立“益童书屋”，项目管理费为5%。" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_divider_black"
                android:padding="10dp"
                android:text="联系方式"
                android:textColor="@color/colorTextContent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="电话：010-51660112-419 邮箱：Ytcz@ccafc.org.cn" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_divider_black"
                android:padding="10dp"
                android:text="支助"
                android:textColor="@color/colorTextContent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="开始时间：2018年6月11日20:44" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="报名人数：26183人" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="10dp"
                android:text="我已阅读并接受《曼陀罗公益用户协议》" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="10dp"
                android:text="公开捐款信息并分享爱心微博" />

            <Button
                android:id="@+id/bt_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="10dp"
                android:text="贡献一份力量"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_titlesmall" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>